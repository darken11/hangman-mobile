<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_game"
        android:textSize="24sp"
        android:layout_margin="64dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word_to_guess"
        android:layout_gravity="center_horizontal"
        android:layout_margin="32dp"
        android:textSize="24sp"
/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_margin="32dp"

        >
        <View
            android:id="@+id/rectangle1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_red_light"
            />
        <View
            android:id="@+id/rectangle2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_red_light"
            />
        <View
            android:id="@+id/rectangle3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_red_light"
            />
        <View
            android:id="@+id/rectangle4"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_red_light"
            />
        <View
            android:id="@+id/rectangle5"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_red_light"
            />
        <View
            android:id="@+id/rectangle6"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_red_light"
            />

    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="32dp"

        >

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fil_a_word"
            android:textColor="#A1887F"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:hint="@string/input"

            android:inputType="text"
            android:text="@string/placeholder"
            android:textColor="#D32F2F"
            tools:ignore="TextViewEdits" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/gray_button"
            android:onClick="onClickOkButton"
            android:text="@string/ok_button"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
